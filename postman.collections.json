            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin1\",\n  \"password\": \"admin123\",\n  \"branch\": \"branch_id\",\n  \"birthDate\": \"1985-06-10\",\n  \"gender\": \"female\",\n  \"role\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin",
              "host": ["{{base_url}}"],
              "path": ["admin"]
